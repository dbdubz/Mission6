@{
    ViewData["Title"] = "Add Movie";
}

<div class="text-center">
    <h3>Add a Movie</h3>
    <br />
</div>
<div>
    <form name="add" id="add">
        <label for="Category">Category</label>
        <select name="Category" id="Category">
            <option selected hidden></option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
        <br /><br />

        <label for="Title">Title</label>
        <input type="text" name="Title" id="Title" />
        <br /><br />

        <label for="Year">Year</label>
        <input type="text" name="Year" id="Year" list="Years" />
        <datalist name="Years" id="Years">
            <option>2012</option>
            <option>2000</option>
            <option>1988</option>
            <option>2005-2006</option>
        </datalist>
        <br /><br />

        <label for="Director">Director</label>
        <input type="text" name="Director" id="Director" list="Directors" multiple />
        <datalist name="Directors" id="Directors">
            <option>Bryan Fuller</option>
            <option>Jonathon Dukes</option>
            <option>Lorne Michaels</option>
            <option>Sam Bobrick</option>
            <option>David Angell, Peter Casey, David Lee</option>
            <option>John Dahl</option>
            <option>Brian De Palma</option>
        </datalist>
        <br /><br />

        <label for="Rating">Rating</label>
        <select name="Rating" id="Rating">
            <option selected hidden></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br /><br />

        <label for="Edited">Edited</label>
        <input type="checkbox" name="Edited" id="Edited" value="1" />
        <br /><br />

        <label for="LentTo">Lent To:</label>
        <input type="text" name="LentTo" id="LentTo" list="Lended" />
        <datalist name="Lended" id="Lended">
            <option>Dave</option>
        </datalist>
        <br /><br />

        <label for="Notes">Notes</label>
        <input type="text" name="Notes" id="Notes" maxlength="25" />
        <br /><br />

        <button type="button">Add</button>
    </form>
</div>