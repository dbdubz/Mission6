@{
    ViewData["Title"] = "Add Movie";
}
@model AddMovie 

<div class="text-center">
    <h3>Add a Movie</h3>
    <br />
</div>
<div>
    <form name="add" id="add" asp-controller="Home" asp-action="AddMovie" method="post">
        <label for="Category" asp-for="Category">Category</label>
        <input type="text" name="Category" id="Category" list="Categories" asp-for="Category" />
        <datalist name="Categories" id="Categories">
            <option selected hidden></option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </datalist>
        <span asp-validation-for="Category" style="color: red;"></span>
        <br /><br />

        <label for="Title" asp-for="Title">Title</label>
        <input type="text" name="Title" id="Title" asp-for="Title" />
        <span asp-validation-for="Title" style="color: red;"></span>
        <br /><br />

        <label for="Year" asp-for="Year">Year</label>
        <input type="text" name="Year" id="Year" list="Years" asp-for="Year" />
        <datalist name="Years" id="Years">
            <option>2012</option>
            <option>2000</option>
            <option>1988</option>
            <option>2005-2006</option>
        </datalist>
        <span asp-validation-for="Year" style="color: red;"></span>
        <br /><br />

        <label for="Director" asp-for="Director">Director</label>
        <input type="text" name="Director" id="Director" list="Directors" asp-for="Director" multiple />
        <datalist name="Directors" id="Directors">
            <option>Bryan Fuller</option>
            <option>Jonathon Dukes</option>
            <option>Lorne Michaels</option>
            <option>Sam Bobrick</option>
            <option>David Angell, Peter Casey, David Lee</option>
            <option>John Dahl</option>
            <option>Brian De Palma</option>
        </datalist>
        <span asp-validation-for="Director" style="color: red;"></span>
        <br /><br />

        <label for="Rating" asp-for="Rating">Rating</label>
        <select name="Rating" id="Rating" asp-for="Rating">
            <option selected hidden></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" style="color: red;"></span>
        <br /><br />

        <label for="Edited" asp-for="Edited">Edited</label>
        <input type="checkbox" name="Edited" id="Edited" value="true" asp-for="Edited" />
        <span asp-validation-for="Edited" style="color: red;"></span>
        <br /><br />

        <label for="LentTo" asp-for="LentTo">Lent To:</label>
        <input type="text" name="LentTo" id="LentTo" list="Lended" asp-for="LentTo" />
        <datalist name="Lended" id="Lended">
            <option>Dave</option>
        </datalist>
        <span asp-validation-for="LentTo" style="color: red;"></span>
        <br /><br />

        <label for="Notes" asp-for="Notes">Notes</label>
        <input type="text" name="Notes" id="Notes" maxlength="25" asp-for="Notes" />
        <span asp-validation-for="Notes" style="color: red;"></span>
        <br /><br />

        <button type="submit">Add</button>
    </form>
</div>