@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}
@model List<AddMovie>

<div class="text-center">
    <h1 class="display-4">The Joel Hilton Film Collection</h1>
    <br /><br />
    <img src="~/img/JoelHiltonHeadshot.jpg" />
    <br /><br />
    <center>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td class="text-center">ID</td>
                    <td class="text-center">Category</td>
                    <td class="text-center">Title</td>
                    <td class="text-center">Year</td>
                    <td class="text-center">Director</td>
                    <td class="text-center">Rating</td>
                    <td class="text-center">Edited</td>
                    <td class="text-center">Lent To</td>
                    <td class="text-center">Notes</td>
                    <td colspan="2" class="text-center">Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Category.Name</td>
                        <td>@movie.Title</td>
                        <td>@movie.Year</td>
                        <td>@movie.Director</td>
                        <td>@movie.Rating</td>
                        <td>@movie.Edited</td>
                        <td>@movie.LentTo</td>
                        <td>@movie.Notes</td>
                        <td>
                            <a asp-controller="Home" asp-action="UpdateMovie" asp-route-movieID="@movie.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="DeleteMovie" asp-route-movieID="@movie.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </center>
</div>